<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andro.ecommerce">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.AppController"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/ActivityTheme" />
        <activity
            android:name=".Activity.CategoryActivity"
            android:label="@string/title_activity_category"
            android:theme="@style/CategoryTheme" />
        <activity
            android:name=".Activity.ProductsActivity"
            android:theme="@style/ProductsTheme" />
        <activity
            android:name=".Activity.ProductInfoActivity"
            android:theme="@style/ProductInfoTheme" />
        <activity android:name=".Activity.ShoppingCartActivity"
            android:label="Shopping Cart"
            android:theme="@style/ShoppingCartTheme"></activity>
    </application>

</manifest>