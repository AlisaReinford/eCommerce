<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProductInfoActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/iv_product_info"
            android:layout_width="wrap_content"
            android:layout_height="630dp"
            android:background="@drawable/bg2"
            android:scaleType="centerCrop" />

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar">

        </include>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#fff"
            android:orientation="vertical">


            <com.example.andro.ecommerce.customfonts.MyTextView
                android:id="@+id/mtv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textColor="@color/colorSub"
                android:textSize="16dp" />

            <com.example.andro.ecommerce.customfonts.MyTextView
                android:id="@+id/mtv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:textColor="@color/colorTex"
                android:textSize="19dp"
                android:visibility="visible" />

            <com.example.andro.ecommerce.customfonts.MyTextView
                android:id="@+id/mtv_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:textColor="@color/colorTex"
                android:textSize="16dp" />

        </LinearLayout>


        <ImageView
            android:id="@+id/iv_addtocart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="70dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/rect"
            android:elevation="8dp"
            android:padding="19dp"
            android:src="@drawable/addtocart0" />


    </FrameLayout>
</RelativeLayout>
